{
  "compilerOptions": {
    "target": "es2020",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "components/*": ["src/components/*"]
    },
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules",
    "build",
    "public",
    "dist",
    "mock",
    "uploads",
    "server",
    "static"
  ],
  "include": [
    "config/**/*",
    "src/**/*"
  ]
}
